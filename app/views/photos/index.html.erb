<h1>Listing photos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Photo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.name %></td>
    <td><%= photo.description %></td>
    <td><%= link_to image_tag(photo.photo.url(:thumb)), photo %></td>
  </tr>
<% end %>
</table>


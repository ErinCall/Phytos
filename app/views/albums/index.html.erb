<% @albums.each do |album| %>
<div class="row">
  <div class="span2">
    <ul class="thumbnails">
      <%= link_to image_tag(album.photo.photo.url(:thumb)), album, :class => 'thumbnail' %>
    </ul>
  </div>
  <div class="span10">
    <h2><%= link_to album.name, album %></h2>
    <p><%= album.description %></p>
  </div>
</div>
<% end %>
<br />

<% if user_signed_in? %>
<%= link_to 'New Album', new_album_path %>
<% end %>
